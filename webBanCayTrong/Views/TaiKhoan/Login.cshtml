
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">

    <!-- Shotcut -->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png" />

    <!-- Font google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">

    <!-- Icon google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <!-- Icon Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>


    <title>Đăng nhập</title>

    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
</head>
<body style="background-color: #3498db;">
    <div id="loginFrame">
        <h3 style="text-align: left;margin-bottom: 50px;">Đăng nhập</h3>
        <form method="post" action="Login" onsubmit="return(kTraDangNhap())">
            <label>Tên đăng nhập:</label><br>
            <input id="username" type="text" name="username" required><br>
            <label>Mật khẩu:</label><br>
            <input id="password" type="password" name="password" required>

            <span onclick="showpass()" id="showpass-span">
                <i id="eye" class="fas fa-eye"></i>
                <i id="hide-eye" class="fas fa-eye-slash"></i>
            </span>
            <p id="message" style="color: red;">@ViewBag.Message</p><br>

            <button>Đăng nhập</button>
            <p>hoặc <a href="~/TaiKhoan/Register">Đăng ký</a></p>
        </form>
    </div>

    <!-- JS -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
