@model webBanCayTrong.Models.TaiKhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.css">

    <!-- Shotcut -->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png" />

    <!-- Font google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">

    <!-- Icon google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <!-- Icon Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>


    <title>Đăng ký</title>

    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
</head>
<body style="background-color: #3498db;">
    <div id="register">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h3>Đăng ký tài khoản:</h3>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Email:</label><br />
                    <input type="text" id="Email" name="Email" value="@Model.Email" />
                    <div style="color: red;">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Tên tài khoản:</label><br />
                    <input type="text" id="TenTK" name="TenTK" value="@Model.TenTK" /><br />
                    @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Mật khẩu:</label><br />
                    <input type="password" id="MatKhau" name="MatKhau" value="@Model.MatKhau" /><br />
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <br />
                <div class="form-group">
                    <button>Đăng ký</button>
                </div>

                <p style="color: green;">@ViewBag.Message</p>
                <a href="~/TaiKhoan/Login">@ViewBag.Login</a>
            </div>
        }
    </div>
</body>
</html>
