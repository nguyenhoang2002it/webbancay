
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/quantri.css">

    <!-- Shotcut -->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png" />

    <!-- Font google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">

    <!-- Icon google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <!-- Icon Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <title>Quản trị hệ thống</title>
</head>
<body>
    <div class="container">
        <div class="top">
            <div class="left">
                <h3>Quản trị hệ thống bán cây trồng Online</h3>
                <h2>HLGarden</h2>
            </div>
            <div class="right">
                <a href="#">
                    <span style="position: relative;top: 6px;" class="material-symbols-outlined">
                        account_circle
                    </span> @ViewBag.Login
                </a>
            </div>
        </div><br>
        <div class="logo">
            <img src="~/Content/img/logo.png" width="70px">
        </div>

        <table class="chucnang">
            <tr>
                <th>
                    <a href="~/QuanLy/QuanLySanPham">Quản lý sản phẩm</a>
                </th>
            </tr>
            <tr>
                <th>
                    <a href="~/QuanLy/QuanLyTaiKhoan">Quản lý tài khoản</a>
                </th>
            </tr>
            <tr>
                <th>
                    <a href="~/QuanLy/DoanhSoBanHang">Doanh số bán hàng</a>
                </th>
            </tr>
        </table>

        <div class="bot">
            <div class="left">
                <p>Phát triển bởi HLSoft</p>
            </div>

            <div class="right">
                <p>©Bản quyền thuộc về Cây giống Hoàng-Điệp-Lương</p>
            </div>
        </div>
    </div>
</body>
</html>
