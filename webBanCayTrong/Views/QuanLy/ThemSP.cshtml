@model webBanCayTrong.Models.SanPham

@{
    Layout = null;
    var db = new webBanCayTrong.Models.QuanLyBanCayTrongEntities();
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/quantri.css">
    <title>ThemSP</title>
    <style>
        .error{
            color: red;
        }
        select{
            font-size: 20px;
            width: 100%;
        }
    </style>
</head>
<body style="background-color: #27ae60;">
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <div id="capnhat-sp">
            <div class="form-horizontal">
                <h2 style="text-align: center;margin-bottom: 30px;">Thêm sản phẩm:</h2>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="error">
                            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SLNhap, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SLNhap, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="error">
                            @Html.ValidationMessageFor(model => model.SLNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GiaBan, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="error">
                            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GiaNhap, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GiaNhap, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="error">
                            @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MoTa1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MoTa1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MoTa2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MoTa2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <label>Danh mục:</label><br />
                <select name="MaDanhMuc" id="MaDanhMuc">
                    <option>1</option>
                    <option>2</option>
                </select>
                @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
                <br />

                <label>Loại cây:</label><br />
                <select name="MaLoai" id="MaLoai">
                    @{
                        var loaiCay = (from lc in db.LoaiCays
                                       select lc).ToList();
                        foreach (var item in loaiCay)
                        {
                            <option>@item.MaLoai</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })

                <div class="form-group button">
                    <button class="reset" type="button">Đặt lại</button>
                    <button class="save" type="submit">Lưu</button>
                    <button class="close" type="button">Thoát</button>
                </div>
            </div>
        </div>
    }
</body>
</html>
