@model List<webBanCayTrong.Models.TaiKhoan>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/quantri.css">

    <!-- Shotcut -->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png" />

    <!-- Font google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">

    <!-- Icon google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <title>Quản lý tài khoản</title>
</head>
<body>
    <div class="qlsp">
        <div class="top">
            <div class="left">
                <h3>Quản trị hệ thống bán cây trồng Online</h3>
                <h2>Cây giống Hoàng-Điệp-Lương</h2>
            </div>
            <div class="right">
                <a href="#">
                    <span style="position: relative;top: 6px;" class="material-symbols-outlined">
                        account_circle
                    </span> admin
                </a>
            </div>
        </div><br>

        <div class="logo">
            <img src="~/Content/img/logo.png" width="70px">
        </div>

        <div style="display: flex;">
            <h3 style="width: 50%;color: white;padding-top: 20px;">Danh sách tài khoản</h3>
        </div>

        <input type="text" id="locSP" onkeyup="locSP()" placeholder="Lọc theo từ khóa...">

        <table class="dssp">
            <tr>
                <th>Tên tài khoản</th>
                <th>Email</th>
                <th>Tên hiển thị</th>
                <th>Trạng thái</th>
            </tr>
            <tbody id="sp">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="~/QuanLy/ChiTietTaiKhoan/?id=@item.TenTK">@item.TenTK</a></td>
                        <td><a href="~/QuanLy/ChiTietTaiKhoan/?id=@item.TenTK">@item.Email</a></td>
                        <td><a href="~/QuanLy/ChiTietTaiKhoan/?id=@item.TenTK">@item.TenHienThi</a></td>
                        <td><a href="~/QuanLy/ChiTietTaiKhoan/?id=@item.TenTK">@item.TrangThai</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="bot">
            <div class="left">
                <p>Phát triển bởi HLSoft</p>
            </div>

            <div class="right">
                <p>©Bản quyền thuộc về Cây giống Hoàng-Điệp-Lương</p>
            </div>
        </div>
        <div style="clear: both;"></div>
    </div>

    <!-- Js -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
