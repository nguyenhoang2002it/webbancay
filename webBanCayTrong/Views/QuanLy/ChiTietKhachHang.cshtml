
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/quantri.css">

    <!-- Shotcut -->
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png" />

    <!-- Font google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap" rel="stylesheet">

    <!-- Icon google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

    <title>Chi tiết khách hàng Mã: @Model.MaKH</title>
</head>
<body>
    <div class="ctqlsp">
        <div class="top">
            <div class="left">
                <h3>Quản trị hệ thống bán cây trồng Online</h3>
                <h2>Cây giống Hoàng-Điệp-Lương</h2>
            </div>
            <div class="right">
                <a href="#">
                    <span style="position: relative;top: 6px;" class="material-symbols-outlined">
                        account_circle
                    </span> admin
                </a>
            </div>
        </div><br>
        <div class="logo">
            <img src="~/Content/img/logo.png" width="70px">
        </div>
        <h3 style="color: white;text-align: center;padding-top: 20px;">Chi tiết khách hàng</h3>
        <table class="ctsp">
            <tr>
                <th>Mã khách hàng</th>
                <th>@Model.MaKH</th>
            </tr>
            <tr>
                <th>Tên khách hàng</th>
                <th>@Model.TenKH</th>
            </tr>
            <tr>
                <th>Ngày sinh</th>
                <th>@string.Format("{0:dd/MM/yyyy}", Model.NgaySinh)</th>
            </tr>
            <tr>
                <th>Số điện thoại</th>
                <th>@Model.SDT</th>
            </tr>
            <tr>
                <th>Địa chỉ</th>
                <th>@Model.DiaChi</th>
            </tr>
            <tr>
                <th>Tên tài khoản</th>
                <th>@Model.TenTK</th>
            </tr>
        </table>

        <div class="bot">
            <div class="left">
                <p>Phát triển bởi HLSoft</p>
            </div>

            <div class="right">
                <p>©Bản quyền thuộc về Cây giống Hoàng-Điệp-Lương</p>
            </div>
        </div>
        <div style="clear: both;"></div>
    </div>
</body>
</html>
